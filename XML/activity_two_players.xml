<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".TwoPlayers">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="73dp"
            android:layout_height="71dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/backbtn"
            android:contentDescription="backBtn"
            android:onClick="goToPageSelectNumbersOfPlayersPage"
            android:text="B"
            app:srcCompat="@drawable/backbtn" />

        <ImageView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/playertwo">


        </ImageView>

        <EditText
            android:id="@+id/username_edit_text1"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="220dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/mariofont"
            android:hint="username"
            android:inputType="text"
            android:outlineAmbientShadowColor="@android:color/transparent"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/username_edit_text2"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="325dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/mariofont"
            android:hint="username"
            android:inputType="text"
            android:outlineAmbientShadowColor="@android:color/transparent"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/proceedBtn"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="640dp"
            android:background="@drawable/proceed_button"
            android:contentDescription="proceedbtn"
            android:text="Proceed" />
    </RelativeLayout>
</LinearLayout>